        <a href="{{ settings.social_tiktok_link }}" class="social-icons__link" target="_blank" rel="noopener" aria-label="{{ 'general.social.tiktok' | t }}">
          {% render 'icon-tiktok' %}
        </a>
      </li>
    {%- endif -%}
    {%- if settings.social_twitter_link != blank -%}
      <li class="social-icons__item">
        <a href="{{ settings.social_twitter_link }}" class="social-icons__link" target="_blank" rel="noopener" aria-label="{{ 'general.social.twitter' | t }}">
          {% render 'icon-twitter' %}
        </a>
      </li>
    {%- endif -%}
    {%- if settings.social_pinterest_link != blank -%}
