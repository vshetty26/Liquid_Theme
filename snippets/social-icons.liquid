        </a>
      </li>
    {%- endif -%}
    {%- if settings.social_vimeo_link != blank -%}
      <li class="social-icons__item">
        <a href="{{ settings.social_vimeo_link }}" class="social-icons__link" target="_blank" rel="noopener" aria-label="{{ 'general.social.vimeo' | t }}">
          {% render 'icon-vimeo' %}
        </a>
      </li>
    {%- endif -%}
  </ul>
{%- endif -%} 