{{ 'about-section.css' | asset_url | stylesheet_tag }}
<script src="{{ 'about-section.js' | asset_url }}" defer></script>

<div class="about-section" id="about-section">
  <div class="about-container">
    <div class="about-content">
      <div class="about-header">
        <div class="dot-indicator"></div>
        <div class="header-text">
          <h2 class="header-title">
            {{ section.settings.heading | replace: 'DIGITAL FASHION HOUSE', '<span class="digital-fashion">DIGITAL FASHION HOUSE</span>' }}
          </h2>
          
          <div class="read-more-container">
            <button class="read-more-btn more-btn" id="read-more-btn">{{ section.settings.read_more_text }}</button>
            <button class="read-more-btn less-btn" id="read-less-btn">{{ section.settings.read_less_text }}</button>
          </div>
        </div>
      </div>
      
      <div class="hidden-content" id="hidden-content">
        <div class="about-description">
          <p class="description-text">
            {{ section.settings.paragraph_1 }}
          </p>
          
          <p class="description-text">
            {{ section.settings.paragraph_2 }}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Section",
  "settings": [
    {
      "type": "header",
      "content": "About Section Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "WE ARE A DIGITAL FASHION HOUSE THAT MIXES TECHNOLOGY AND CREATIVITY TO TAKE FASHION BEYOND ONLY-PHYSICAL EXPERIENCES."
    },
    {
      "type": "text",
      "id": "read_more_text",
      "label": "Read More Button Text",
      "default": "Read more about us"
    },
    {
      "type": "text",
      "id": "read_less_text",
      "label": "Read Less Button Text",
      "default": "Less"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "We have established Nueno Concept as the first Polish brand of clothes that don't exist & Nueno Lab to conduct digital experiments with fashion creators. We want to inspire you and pave the way for a digital fashion future."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "Digitally tailored clothes, AR extended clothes, online trying-ons are only small pieces of the future where Nueno will lead your brand."
    }
  ],
  "presets": [
    {
      "name": "About Section",
      "category": "Custom Content"
    }
  ]
}
{% endschema %} 