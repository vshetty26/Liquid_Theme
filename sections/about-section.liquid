{{ 'about-section.css' | asset_url | stylesheet_tag }}
<script src="{{ 'about-section.js' | asset_url }}" defer></script>

<div class="about-section" id="about-section">
  <div class="about-container">
    <!-- Left side - Sticky Image -->
    <div class="about-image-container">
      {% if section.settings.about_image != blank %}
        <img 
          src="{{ section.settings.about_image | img_url: 'master' }}"
          alt="About Us"
          class="about-image"
          loading="lazy"
        >
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg about-image' }}
      {% endif %}
      
      <div class="explore-circle">
        <div class="explore-circle-inner">
          <span class="explore-text">Explore</span>
          <span class="concept-name">Nueno Concept</span>
        </div>
      </div>
    </div>

    <!-- Right side - Scrolling Content -->
    <div class="about-content">
      <div class="about-header">
        <h2 class="header-title">
          {{ section.settings.heading | replace: 'DIGITAL FASHION HOUSE', '<span class="digital-fashion">DIGITAL FASHION HOUSE</span>' }}
        </h2>
        
        <div class="header-subtitle">
          <span class="discover-text">DISCOVER</span>
          <span class="brand-name">NUENO CONCEPT</span>
        </div>
      </div>
      
      <div class="about-text-content">
        <p class="about-paragraph">{{ section.settings.paragraph_1 }}</p>
        <p class="about-paragraph">{{ section.settings.paragraph_2 }}</p>
        <p class="about-paragraph">EXPLORE THE FULL STORY OF CLOTHES THAT DON'T EXIST</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "about_image",
      "label": "About Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "DIGITAL FASHION IS A NEW CHAPTER"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "THERE IS NOTHING MORE IMPORTANT THAN THE ACT OF PUSHING YOUR IMAGINATION FORWARD."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "WE CREATED DIGITAL CLOTHES THAT EXIST ONLY IN THE DIGITAL WORLD - AND ALL THAT WE USED TO DO SO IS OUR CREATIVITY AND THE DIGITAL CLOTHS."
    }
  ],
  "presets": [
    {
      "name": "About Section"
    }
  ]
}
{% endschema %} 