{{ 'collection-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'collection-slider.js' | asset_url }}" defer></script>

<div class="collection-slider-section">
  <div class="collection-header">
    <h2 class="collection-title">{{ section.settings.header_text }}</h2>
  </div>
  
  <div class="collection-slider-container">
    {% for i in (1..6) %}
      {% assign image_field = 'image_' | append: i %}
      {% assign image = section.settings[image_field] %}
      
      <div class="collection-slide">
        <div class="collection-image-container">
          {% if image != blank %}
            <img 
              src="{{ image | img_url: 'master' }}" 
              alt="{{ image.alt | escape }}" 
              class="collection-image"
              loading="{% if i == 1 %}eager{% else %}lazy{% endif %}"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'collection-image placeholder' }}
          {% endif %}
        </div>
        
        <div class="collection-number">
          <div class="collection-number-text">NO.</div>
          <div>
            <span class="collection-number-value">{{ i }}</span>
            <span class="collection-number-separator">/</span>
            <span class="collection-number-total">7</span>
          </div>
        </div>
        
        {% if section.settings.show_drag_circle %}
          <div class="drag-circle-indicator">
            <span class="drag-circle-text">Drag</span>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  
  <div class="progress-dots">
    {% for i in (1..6) %}
      <div class="progress-dot {% if i == 1 %}active{% endif %}"></div>
    {% endfor %}
  </div>
</div>

