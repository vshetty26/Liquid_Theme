{{ 'collection-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'collection-slider.js' | asset_url }}" defer></script>

<div class="collection-slider-section">
  <div class="collection-nav">
    <div class="nav-left">GLADE</div>
    <div class="nav-right">
      <span></span>
      <div class="nav-dot"></div>
    </div>
  </div>

  <div class="collection-slider-container">
    {% for i in (1..7) %}
      {% assign image_field = 'image_' | append: i %}
      {% assign image = section.settings[image_field] %}
      
      <div class="collection-slide">
        <div class="collection-image-container">
          {% if image != blank %}
            <img 
              src="{{ image | img_url: 'master' }}" 
              alt="{{ image.alt | escape }}" 
              class="collection-image"
              loading="{% if i == 1 %}eager{% else %}lazy{% endif %}"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'collection-image placeholder' }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="drag-cursor">
    <span class="drag-text">Drag</span>
  </div>

  <div class="drag-indicator">
    <div class="drag-line"></div>
    <div class="drag-line"></div>
    <div class="drag-line"></div>
  </div>
</div>

