{{ 'product-grid.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-grid.js' | asset_url }}" defer></script>

<div class="product-grid-section">
  <div class="product-grid-container">
    {% for i in (1..6) %}
      <div class="product-card">
        <div class="product-slider">
          <div class="product-slides">
            {% for j in (1..4) %}
              {% assign image_field = 'product_' | append: i | append: '_image_' | append: j %}
              {% assign image = section.settings[image_field] %}
              <div class="product-slide">
                <div class="product-image-container">
                  {% if image != blank %}
                    <img 
                      src="{{ image | img_url: 'master' }}"
                      alt="Product {{ i }} - View {{ j }}"
                      class="product-image"
                      loading="{% if i == 1 and j == 1 %}eager{% else %}lazy{% endif %}"
                    >
                  {% else %}
                    <div class="product-image-placeholder">No image</div>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="slider-nav">
            <button class="prev-slide" aria-label="Previous image">‹</button>
            <button class="next-slide" aria-label="Next image">›</button>
          </div>
          <div class="slider-dots">
            {% for j in (1..4) %}
              <button class="dot" data-slide="{{ j }}" aria-label="Go to slide {{ j }}"></button>
            {% endfor %}
          </div>
        </div>
        <div class="product-info">
          <h3 class="product-title">Product {{ i }}</h3>
          <p class="product-price">Rs. {{ section.settings.price | default: '00.00' }}</p>
          <button class="buy-now-button">
            <span>BUY NOW</span>
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

