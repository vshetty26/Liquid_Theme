  "name": "Product Grid",
  "settings": [
    {
      "type": "url",
      "id": "shop_now_url",
      "label": "Shop Now URL"
    }
  ],
  "blocks": [
    {
      "type": "featured_product",
      "name": "Featured Grid Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Category",
          "default": "TOPS"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Product Title"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "85"
        },
        {
          "type": "checkbox",
          "id": "is_new",
          "label": "Show New Label",
          "default": false
        }
      ]
    },
    {
      "type": "product",
      "name": "Grid Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Category",
          "default": "TOPS"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Product Title"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "85"
        },
        {
          "type": "checkbox",
          "id": "is_new",
          "label": "Show New Label",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}
