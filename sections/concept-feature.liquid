{{ 'concept-feature.css' | asset_url | stylesheet_tag }}
<script src="{{ 'concept-feature.js' | asset_url }}" defer></script>

<div class="concept-feature-section" {% if section.settings.concept_link != blank %}data-concept-link="{{ section.settings.concept_link }}"{% endif %}>
  <!-- Custom cursor -->
  <div class="concept-cursor"></div>

  <!-- Left side - Large image -->
  <div class="concept-image-container">
    {% if section.settings.concept_image != blank %}
      <img 
        class="concept-image" 
        src="{{ section.settings.concept_image | img_url: 'master' }}"
        alt="{{ section.settings.concept_name }}"
        loading="lazy"
      >
    {% else %}
      <div class="image-placeholder">
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {% endif %}
    
    <!-- Explore circle overlay -->
    <div class="concept-explore-circle">
      <div class="concept-explore-inner">
        <span class="concept-explore-text">Explore</span>
        <span class="concept-name">{{ section.settings.concept_name }}</span>
      </div>
    </div>
  </div>
  
  <!-- Right side - Parallax text content -->
  <div class="concept-content-container">
    <!-- Big CONCEPT text -->
    <div class="concept-big-text">CONC</div>
    <div class="concept-big-text-second">EPT</div>
    
    <div class="concept-heading-container">
      <h2 class="concept-heading-primary">{{ section.settings.heading_primary }}</h2>
      <div class="concept-heading-secondary">
        <span class="concept-discover">DISCOVER</span>
        <span class="concept-name-heading">{{ section.settings.concept_name }}</span>
      </div>
    </div>
    
    <div class="concept-text-container">
      {% if section.settings.paragraph_1 != blank %}
        <p class="concept-paragraph">{{ section.settings.paragraph_1 }}</p>
      {% endif %}
      
      {% if section.settings.paragraph_2 != blank %}
        <p class="concept-paragraph">{{ section.settings.paragraph_2 }}</p>
      {% endif %}
    </div>
  </div>
  
  <!-- Small dot in top right corner -->
  <div class="concept-corner-dot"></div>
</div>

{% schema %}
{
  "name": "Concept Feature",
  "settings": [
    {
      "type": "image_picker",
      "id": "concept_image",
      "label": "Concept Image",
      "info": "Large image shown on the left side"
    },
    {
      "type": "text",
      "id": "concept_name",
      "label": "Concept Name",
      "default": "Nueno Concept"
    },
    {
      "type": "text",
      "id": "heading_primary",
      "label": "Primary Heading",
      "default": "DIGITAL FASHION IS A NEW CHAPTER"
    },
    {
      "type": "text",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "THERE IS NOTHING MORE IMPORTANT THAN THE ACT OF PUSHING YOUR IMAGINATION FORWARD."
    },
    {
      "type": "text",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "WE CREATED DIGITAL CLOTHES THAT EXIST ONLY IN THE DIGITAL WORLD - AND ALL THAT WE USED TO DO SO IS OUR CREATIVITY AND THE DIGITAL CLOTHS."
    },
    {
      "type": "url",
      "id": "concept_link",
      "label": "Concept Link",
      "info": "Link to navigate to when the image is clicked"
    }
  ],
  "presets": [
    {
      "name": "Concept Feature",
      "category": "Custom Content"
    }
  ]
}
{% endschema %} 