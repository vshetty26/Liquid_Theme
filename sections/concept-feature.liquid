{{ 'concept-feature.css' | asset_url | stylesheet_tag }}
<script src="{{ 'concept-feature.js' | asset_url }}" defer></script>

<div class="concept-feature-section" data-scroll-section>
  <!-- Top Navigation -->
  <div class="concept-nav">
    <div class="nav-left">GLADE</div>
    <div class="nav-dot"></div>
  </div>

  <div class="concept-container">
    <!-- Left side - Image -->
    <div class="concept-image-container" data-scroll data-scroll-speed="-1">
      {% if section.settings.concept_image != blank %}
        <img 
          src="{{ section.settings.concept_image | img_url: 'master' }}"
          alt="{{ section.settings.concept_name }}"
          class="concept-image"
          loading="lazy"
          data-scroll
          data-scroll-speed="-2"
        >
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg concept-image' }}
      {% endif %}
      
      <div class="explore-circle">
        <div class="explore-circle-inner">
          <span class="explore-text">Explore</span>
          <span class="concept-name">Nueno Concept</span>
        </div>
      </div>
    </div>

    <!-- Right side - Content -->
    <div class="concept-content">
      <!-- Background Text -->
      <div class="background-text" data-scroll data-scroll-speed="2">
        <div class="text-conc">CONC</div>
        <div class="text-ept">EPT</div>
      </div>

      <!-- Main Content -->
      <div class="content-wrapper" data-scroll data-scroll-speed="1">
        <h1 class="concept-title">{{ section.settings.heading }}</h1>
        <div class="concept-subtitle">
          <span class="discover">DISCOVER</span>
          <span class="brand">NUENO CONCEPT</span>
        </div>
        
        <div class="concept-text">
          <p data-scroll data-scroll-speed="0.5">{{ section.settings.paragraph_1 }}</p>
          <p data-scroll data-scroll-speed="0.7">{{ section.settings.paragraph_2 }}</p>
          <p data-scroll data-scroll-speed="0.9">{{ section.settings.paragraph_3 }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Cookie Consent -->
  <div class="cookie-consent" id="cookieConsent">
    <div class="cookie-text">We use cookies to enhance your experience. By continuing to visit this site you agree to our use of cookies.</div>
    <button class="cookie-button" onclick="acceptCookies()">Accept</button>
  </div>
</div>

<script>
  function acceptCookies() {
    document.getElementById('cookieConsent').style.display = 'none';
    localStorage.setItem('cookiesAccepted', 'true');
  }

  // Check if cookies were previously accepted
  document.addEventListener('DOMContentLoaded', function() {
    if (!localStorage.getItem('cookiesAccepted')) {
      document.getElementById('cookieConsent').style.display = 'flex';
    }
  });

  // Initialize smooth scroll and parallax
  document.addEventListener('DOMContentLoaded', function() {
    const scroll = new LocomotiveScroll({
      el: document.querySelector('[data-scroll-container]'),
      smooth: true,
      multiplier: 1,
      lerp: 0.1
    });
  });
</script>

{% schema %}
{
  "name": "Concept Feature",
  "settings": [
    {
      "type": "image_picker",
      "id": "concept_image",
      "label": "Concept Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "DIGITAL FASHION IS A NEW CHAPTER"
    },
    {
      "type": "text",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "THERE IS NOTHING MORE IMPORTANT THAN THE ACT OF PUSHING YOUR IMAGINATION FORWARD."
    },
    {
      "type": "text",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "WE CREATED DIGITAL CLOTHES THAT EXIST ONLY IN THE DIGITAL WORLD - AND ALL THAT WE USED TO DO SO IS OUR CREATIVITY AND THE DIGITAL CLOTHS."
    },
    {
      "type": "text",
      "id": "paragraph_3",
      "label": "Third Paragraph",
      "default": "EXPLORE THE FULL STORY OF CLOTHES THAT DON'T EXIST."
    }
  ],
  "presets": [
    {
      "name": "Concept Feature"
    }
  ]
}
{% endschema %} 